{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "scopeName": "source.inform7.extension",
  "name": "Inform 7 extension",
  "patterns": [
    {
      "include": "#title"
    },
    {
      "include": "#body"
    }
  ],
  "repository": {
    "title": {
      "begin": "^.*$",
      "beginCaptures": {
        "0": {
          "name": "markup.heading.inform7.extension"
        }
      },
      "end": "$END",
      "patterns": [
        {
          "include": "#rubric"
        },
        {
          "include": "#body"
        }
      ]
    },
    "rubric": {
      "begin": "^\"[^\"]*\"$",
      "beginCaptures": {
        "0": {
          "name": "keyword.other.rubric.inform7.extension"
        }
      },
      "end": "$END",
      "patterns": [
        {
          "include": "#credits"
        },
        {
          "include": "#body"
        }
      ]
    },
    "credits": {
      "begin": "^\"[^\"]*\"$",
      "beginCaptures": {
        "0": {
          "name": "keyword.other.credits.inform7.extension"
        }
      },
      "end": "$END",
      "patterns": [
        {
          "include": "#body"
        }
      ]
    },
    "body": {
      "begin": "(?=.)",
      "end": "$END",
      "patterns": [
        {
          "include": "source.inform7#source"
        },
        {
          "include": "#end"
        },
        {
          "include": "#documentation"
        }
      ]
    },
    "end": {
      "name": "markup.heading.inform7.extension",
      "match": "^[^\"\\[\\]]+ ends? here.$"
    },
    "documentation": {
      "begin": "(?i)^\\s*(----\\s+documentation\\s+----).*$",
      "beginCaptures": {
        "1": {
          "name": "markup.heading.inform7.extension"
        }
      },
      "end": "$END",
      "patterns": [
        {
          "include": "source.inform7#comment"
        }
      ]
    }
  }
}
