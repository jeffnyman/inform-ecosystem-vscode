{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "scopeName": "source.inform7",
  "name": "Inform 7",
  "patterns": [
    {
      "include": "#title"
    },
    {
      "include": "#body"
    }
  ],
  "repository": {
    "title": {
      "begin": "^\".*$",
      "beginCaptures": {
        "0": {
          "name": "markup.heading.inform7 markup.underline.inform7"
        }
      },
      "end": "$END",
      "patterns": [
        {
          "include": "#body"
        }
      ]
    },
    "body": {
      "begin": "(?=.)",
      "end": "$END",
      "patterns": [
        {
          "include": "#source"
        }
      ]
    },
    "source": {
      "patterns":[
        {
          "include": "#comment"
        },
        {
          "include": "#text"
        },
        {
          "include": "#heading"
        },
        {
          "include": "#tableName"
        }
      ]
    },
    "comment": {
      "name": "comment.block.inform7",
      "begin": "\\[",
      "beginCaptures": {
        "0": {
          "name": "punctuation.bracket.open"
        }
      },
      "end": "\\]",
      "endCaptures": {
        "0": {
          "name": "punctuation.bracket.close"
        }
      },
      "patterns": [
        {
          "include": "#nestedComment"
        }
      ]
    },
    "nestedComment": {
      "begin": "\\[",
      "end": "\\]",
      "patterns": [
        {
          "include": "#nestedComment"
        }
      ]
    },
    "text": {
      "name": "string.quoted.double.inform7",
      "begin": "\"",
      "beginCaptures": {
        "0": {
          "name": "punctuation.double.quote.string.begin"
        }
      },
      "end": "\"",
      "endCaptures": {
        "0": {
          "name": "punctuation.double.quote.string.end"
        }
      },
      "patterns": [
        {
          "include": "#textSubstitution"
        }
      ]
    },
    "textSubstitution": {
      "name": "constant.character.escape.inform7",
      "begin": "\\[",
      "end": "\\]|([^\"])?(?=\")"
    },
    "heading": {
      "patterns": [
        {
          "name": "markup.heading.1.inform7",
          "match": "(?i)^\\s*volume:?\\s+.*$"
        },
        {
          "name": "markup.heading.2.inform7",
          "match": "(?i)^\\s*book:?\\s+.*$"
        },
        {
          "name": "markup.heading.3.inform7",
          "match": "(?i)^\\s*part:?\\s+.*$"
        },
        {
          "name": "markup.heading.4.inform7",
          "match": "(?i)^\\s*chapter:?\\s+.*$"
        },
        {
          "name": "markup.heading.5.inform7",
          "match": "(?i)^\\s*section:?\\s+.*$"
        }
      ]
    },
    "tableName": {
      "name": "markup.underline.inform7",
      "match": "(?i)^\\s*Table .*$"
    }
  }
}
